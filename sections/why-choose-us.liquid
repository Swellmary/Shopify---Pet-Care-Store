{{ 'section-why-choose-us.css' | asset_url | stylesheet_tag }}

<div class="why-choose-us">
  <div class="page-width">
    
    <!-- Section Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="why-choose-us__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="why-choose-us__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <!-- Features Grid (THE LOOP!) -->
    <div class="why-choose-us__grid">
      {% for block in section.blocks %}
        <div 
          class="feature-card {% if forloop.first %}feature-card--first{% endif %} {% if forloop.last %}feature-card--last{% endif %}"
          {{ block.shopify_attributes }}
        >
          <!-- Feature Number (using forloop.index) -->
          <span class="feature-card__number">{{ forloop.index }}</span>

          <!-- Icon -->
          {% if block.settings.icon != blank %}
            <div class="feature-card__icon">
              {{ block.settings.icon }}
            </div>
          {% endif %}

          <!-- Title -->
          {% if block.settings.title != blank %}
            <h3 class="feature-card__title">{{ block.settings.title }}</h3>
          {% endif %}

          <!-- Description -->
          {% if block.settings.description != blank %}
            <p class="feature-card__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Show total count -->
    <p class="why-choose-us__count">
      {{ section.blocks.size }} reasons to shop with us!
    </p>

  </div>
</div>

