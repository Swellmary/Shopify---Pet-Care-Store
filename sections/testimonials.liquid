<div class="testimonials" style="
  padding: 40px 20px;
  text-align: center;
">
  <h2 style="margin-bottom: 30px;">{{ section.settings.heading }}</h2>
  
  <div class="testimonials-grid" style="
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  ">
    {% for block in section.blocks %}
      <div class="testimonial-card" style="
        flex: 1 1 300px;
        max-width: 350px;
        padding: 25px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      ">
        <p style="
          font-style: italic;
          font-size: 16px;
          line-height: 1.6;
          margin-bottom: 15px;
        ">"{{ block.settings.quote }}"</p>
        <span style="
          font-weight: bold;
          color: #666;
        ">- {{ block.settings.author }}</span>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What People Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Great store!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}