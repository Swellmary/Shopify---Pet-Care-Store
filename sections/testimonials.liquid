<div class="testimonials">
  <h2>{{ section.settings.heading }}</h2>
  
  {% for block in section.blocks %}
    <div class="testimonial">
      <p>"{{ block.settings.quote }}"</p>
      <span>- {{ block.settings.author }}</span>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What People Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "Great store!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}