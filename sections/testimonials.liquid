<div id="testimonials-{{ section.id }}" class="testimonials-section">
  <h2 class="testimonials-heading">{{ section.settings.heading }}</h2>
  
  <div class="testimonials-wrapper">
    <button class="slider-arrow slider-prev" aria-label="Previous">&#8249;</button>
    
    <div class="testimonial-card" {{ block.shopify_attributes }}>
      <p class="testimonial-quote">"{{ block.settings.quote }}"</p>
      <button class="see-more-btn" data-quote="{{ block.settings.quote | escape }}" data-author="{{ block.settings.author | escape }}">See More</button>
      <span class="testimonial-author">- {{ block.settings.author }}</span>
    </div>
    
    <button class="slider-arrow slider-next" aria-label="Next">&#8250;</button>
  </div>
</div>

<style>
  #testimonials-{{ section.id }} {
    padding: 40px 20px;
    text-align: center;
  }

  #testimonials-{{ section.id }} .testimonials-heading {
    margin-bottom: 30px;
  }

  #testimonials-{{ section.id }} .testimonials-wrapper {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px; /* space for arrows */
  }

  #testimonials-{{ section.id }} .testimonials-grid {
    display: flex;
    flex-wrap: nowrap;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  #testimonials-{{ section.id }} .testimonials-grid::-webkit-scrollbar {
    display: none;
  }

  #testimonials-{{ section.id }} .testimonial-card {
    flex: 0 0 300px;
    min-width: 300px;
    max-width: 350px;
    padding: 25px;
    border: 1px solid #ddd;
    border-radius: 10px;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    scroll-snap-align: start;
  }

  #testimonials-{{ section.id }} .testimonial-quote {
    font-style: italic;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 15px;
  }

  #testimonials-{{ section.id }} .testimonial-author {
    font-weight: bold;
    color: #666;
  }

  #testimonials-{{ section.id }} .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 50%;
    font-size: 24px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: background 0.3s, box-shadow 0.3s;
  }

  #testimonials-{{ section.id }} .slider-arrow:hover {
    background: #f5f5f5;
    box-shadow: 0 3px 8px rgba(0,0,0,0.15);
  }

  #testimonials-{{ section.id }} .slider-prev {
    left: 0;
  }

  #testimonials-{{ section.id }} .slider-next {
    right: 0;
  }

  /* Hide arrows on mobile, allow swipe */
  @media (max-width: 600px) {
    #testimonials-{{ section.id }} .testimonials-wrapper {
      padding: 0 10px;
    }
    #testimonials-{{ section.id }} .slider-arrow {
      display: none;
    }
  }

  /* Modal Styles */
#testimonials-{{ section.id }} .modal-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  z-index: 9999;
  justify-content: center;
  align-items: center;
}

#testimonials-{{ section.id }} .modal-overlay.active {
  display: flex;
}

#testimonials-{{ section.id }} .modal-content {
  background: #fff;
  padding: 30px;
  border-radius: 16px;
  max-width: 500px;
  width: 90%;
  max-height: 70vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

#testimonials-{{ section.id }} .modal-close {
  position: absolute;
  top: 15px;
  right: 15px;
  background: #f5f5f5;
  border: none;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  font-size: 18px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.3s;
}

#testimonials-{{ section.id }} .modal-close:hover {
  background: #e0e0e0;
}

#testimonials-{{ section.id }} .modal-quote {
  font-style: italic;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  margin-bottom: 20px;
}

#testimonials-{{ section.id }} .modal-author {
  font-weight: bold;
  color: #666;
  font-size: 14px;
}

#testimonials-{{ section.id }} .see-more-btn {
  background: none;
  border: none;
  color: #007bff;
  font-size: 13px;
  cursor: pointer;
  padding: 0;
  margin-top: 8px;
  font-weight: 500;
  transition: color 0.3s;
}

#testimonials-{{ section.id }} .see-more-btn:hover {
  color: #0056b3;
  text-decoration: underline;
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var section = document.getElementById('testimonials-{{ section.id }}');
    var grid = document.getElementById('testimonials-grid-{{ section.id }}');
    var prevBtn = section.querySelector('.slider-prev');
    var nextBtn = section.querySelector('.slider-next');
    var card = grid.querySelector('.testimonial-card');
    var scrollAmount = card ? card.offsetWidth + 20 : 320;

    // Arrow navigation
    prevBtn.addEventListener('click', function() {
      grid.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', function() {
      grid.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });

    // Modal functionality
    var modal = document.getElementById('modal-{{ section.id }}');
    var modalQuote = modal.querySelector('.modal-quote');
    var modalAuthor = modal.querySelector('.modal-author');
    var modalClose = modal.querySelector('.modal-close');
    var seeMoreBtns = section.querySelectorAll('.see-more-btn');

    seeMoreBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        var quote = this.getAttribute('data-quote');
        var author = this.getAttribute('data-author');
        modalQuote.textContent = '"' + quote + '"';
        modalAuthor.textContent = '- ' + author;
        modal.classList.add('active');
      });
    });

    modalClose.addEventListener('click', function() {
      modal.classList.remove('active');
    });

    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        modal.classList.remove('active');
      }
    });
  });
</script>

